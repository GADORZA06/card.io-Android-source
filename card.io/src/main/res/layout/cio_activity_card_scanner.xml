<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:gravity="center_vertical"
    android:layout_alignParentTop="true"
    android:background="@color/toolbar_color" >

    <ImageButton
        android:id="@+id/partial_toolbar_arrow_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:foregroundGravity="left"
        android:paddingRight="2dp"
        android:src="@drawable/cio_ic_chevron_rotate" />


    <TextView
        android:id="@+id/partial_toolbar_arrow_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/partial_toolbar_arrow_view"
        android:layout_alignTop="@id/partial_toolbar_arrow_view"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/partial_toolbar_check_view"
        android:layout_toRightOf="@id/partial_toolbar_arrow_view"
        android:gravity="center"
        android:singleLine="true"
        android:text="Scan Credit Card"
        android:textColor="@color/toolbar_text_color"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/partial_toolbar_check_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cio_ic_check"
        android:visibility="invisible" />

</RelativeLayout>